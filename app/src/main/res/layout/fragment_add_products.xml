<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddProductsFragment">

    <!-- TODO: Update blank fragment layout -->

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/etName"
            android:layout_width="333dp"
            android:layout_height="48dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp"
            android:background="@color/SecundaryBackground"
            android:maxLines="1"
            android:hint="@string/addName"
            android:padding="16dp"
            android:singleLine="true"
            app:layout_constraintBottom_toTopOf="@+id/tvDescrition"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.435"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvTitleAddProduct"
            app:layout_constraintVertical_bias="0.86" />

        <TextView
            android:id="@+id/tvTitleAddProduct"
            android:layout_width="318dp"
            android:layout_height="62dp"
            android:layout_marginStart="36dp"
            android:layout_marginTop="91dp"
            android:layout_marginEnd="57dp"
            android:layout_marginBottom="578dp"
            android:gravity="center"
            android:orientation="vertical"
            android:text="@string/TextProductAdd"
            android:textAllCaps="true"
            android:textColor="@color/black"
            android:textSize="25sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/ivBack"
            android:layout_width="37dp"
            android:layout_height="30dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="350dp"
            android:layout_marginBottom="684dp"
            android:src="@drawable/back_icon"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvDescrition"
            android:layout_width="110dp"
            android:layout_height="23dp"
            android:layout_marginBottom="8dp"
            android:text="@string/Description"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.119"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvTitleAddProduct"
            app:layout_constraintVertical_bias="0.235" />

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/etDescription"
            android:layout_width="330dp"
            android:layout_height="101dp"
            android:layout_marginTop="8dp"
            android:background="@color/SecundaryBackground"
            android:maxLines="4"
            android:hint="@string/addDescription"
            android:padding="16dp"
            android:singleLine="false"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.444"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvDescrition"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/tvName"
            android:layout_width="110dp"
            android:layout_height="23dp"
            android:layout_marginBottom="8dp"
            android:text="@string/name"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/etName"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.119"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvTitleAddProduct"
            app:layout_constraintVertical_bias="1.0" />

        <TextView
            android:id="@+id/tvImage"
            android:layout_width="110dp"
            android:layout_height="23dp"
            android:layout_marginBottom="8dp"
            android:text="@string/Image"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.119"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvTitleAddProduct"
            app:layout_constraintVertical_bias="0.528" />

        <ImageView
            android:id="@+id/ivProduct"
            android:layout_width="331dp"
            android:layout_height="112dp"
            android:backgroundTint="@color/SecundaryBackground"
            android:contentDescription="Imagen seleccionada"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.425"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/etDescription"
            app:layout_constraintVertical_bias="0.287" />

        <Button
            android:id="@+id/btnSelectImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/SecundaryBackground"
            android:text="Tomar foto"
            android:textColor="@color/black"
            app:layout_constraintBottom_toBottomOf="@+id/ivProduct"
            app:layout_constraintEnd_toEndOf="@+id/ivProduct"
            app:layout_constraintHorizontal_bias="0.01"
            app:layout_constraintStart_toStartOf="@+id/ivProduct"
            app:layout_constraintTop_toTopOf="@+id/ivProduct"
            app:layout_constraintVertical_bias="0.203" />

        <Button
            android:id="@+id/btnAddProduct"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/redBtn"
            android:text="@string/AddProduct"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.497"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ivProduct"
            app:layout_constraintVertical_bias="0.153" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>