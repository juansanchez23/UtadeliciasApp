<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo"
    tools:context=".cupones_fragmento">

    <!-- ScrollView envuelve todos los elementos que deben ser desplazables -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Tarjeta de tÃ­tulo -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp">

                <TextView
                    android:id="@+id/doble_guerrero2"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="#FF2459"
                    android:fontFamily="serif"
                    android:gravity="center"
                    android:text="@string/cupones_ofertados"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    android:textStyle="bold" />
            </androidx.cardview.widget.CardView>

            <!-- Campos de texto -->
            <TextView
                android:id="@+id/textId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="@string/id"
                android:textSize="20sp"
                android:textColor="@color/colorSecondary"
                android:textStyle="bold"/>

            <EditText
                android:id="@+id/text_Id"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:hint="@string/ingresa_el_id_del_cup_n"
                android:padding="8dp"
                android:textColorHint="#80AAAAAA"  />

            <TextView
                android:id="@+id/textNombre"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="@string/nombre"
                android:textSize="20sp"
                android:textColor="@color/colorSecondary"
                android:textStyle="bold"/>

            <EditText
                android:id="@+id/txt_Nombre"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:hint="@string/ingresa_el_nombre_del_cup_n"
                android:padding="8dp"
                android:textColorHint="#80AAAAAA" />

            <TextView
                android:id="@+id/txtDescripcion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="@string/Description"
                android:textSize="20sp"
                android:textColor="@color/colorSecondary"
                android:textStyle="bold"/>

            <EditText
                android:id="@+id/txt_Descripcion"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:hint="@string/ingresa_la_descripci_n_del_cup_n"
                android:padding="8dp"
                android:textColorHint="#80AAAAAA" />

            <!-- RecyclerView -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rDatos"
                android:layout_width="match_parent"
                android:layout_height="292dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="16dp"
                android:background="@android:color/transparent"
                android:scrollbars="vertical" />

            <!-- Botones -->
            <Button
                android:id="@+id/btnAgregarCupon"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="20dp"
                android:backgroundTint="@color/colorSecondary"
                android:text="@string/agregar_cup_n"
                android:textColor="@color/white" />


            <Button
                android:id="@+id/btnEliminar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="15dp"
                android:backgroundTint="@color/colorSecondary"
                android:text="@string/eliminar_cup_nes"
                android:textColor="@color/white" />

            <Button
                android:id="@+id/btnActualizar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="20dp"
                android:backgroundTint="@color/colorSecondary"
                android:text="@string/editar_cup_n"
                android:textColor="@color/white" />

        </LinearLayout>
    </ScrollView>

</FrameLayout>
