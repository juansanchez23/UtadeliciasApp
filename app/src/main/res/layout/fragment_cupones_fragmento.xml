<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo"
    tools:context=".cupones_fragmento">

    <!-- ScrollView envuelve todos los elementos que deben ser desplazables -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Tarjeta de título -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp">

                <TextView
                    android:id="@+id/doble_guerrero2"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="#FF2459"
                    android:fontFamily="serif"
                    android:gravity="center"
                    android:text="Cupones ofertados"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    android:textStyle="bold" />
            </androidx.cardview.widget.CardView>

            <!-- Campos de texto -->
            <TextView
                android:id="@+id/textId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Id"
                android:textSize="20sp"
                android:textColor="@color/colorSecondary"
                android:textStyle="bold"/>

            <EditText
                android:id="@+id/text_Id"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:hint="Ingresa el ID del cupón"
                android:padding="8dp"
                android:textColorHint="#80AAAAAA"  />

            <TextView
                android:id="@+id/textNombre"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Nombre"
                android:textSize="20sp"
                android:textColor="@color/colorSecondary"
                android:textStyle="bold"/>

            <EditText
                android:id="@+id/txt_Nombre"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:hint="Ingresa el nombre del cupón"
                android:padding="8dp"
                android:textColorHint="#80AAAAAA" />

            <TextView
                android:id="@+id/txtDescripcion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Descripcion"
                android:textSize="20sp"
                android:textColor="@color/colorSecondary"
                android:textStyle="bold"/>

            <EditText
                android:id="@+id/txt_Descripcion"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:hint="Ingresa la descripción del cupón"
                android:padding="8dp"
                android:textColorHint="#80AAAAAA" />

            <!-- RecyclerView -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rDatos"
                android:layout_width="match_parent"
                android:layout_height="292dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="16dp"
                android:background="@android:color/transparent"
                android:scrollbars="vertical" />

            <!-- Botones -->
            <Button
                android:id="@+id/btnAgregarCupon"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="20dp"
                android:backgroundTint="@color/colorSecondary"
                android:text="Agregar cupón"
                android:textColor="@color/white" />


            <Button
                android:id="@+id/btnEliminar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="15dp"
                android:backgroundTint="@color/colorSecondary"
                android:text="Eliminar cupónes"
                android:textColor="@color/white" />

            <Button
                android:id="@+id/btnActualizar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="20dp"
                android:backgroundTint="@color/colorSecondary"
                android:text="Editar cupón"
                android:textColor="@color/white" />

        </LinearLayout>
    </ScrollView>

</FrameLayout>
