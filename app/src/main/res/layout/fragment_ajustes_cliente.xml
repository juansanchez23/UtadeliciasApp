<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo"

    tools:context=".ajustes_cliente">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <TextView
            android:id="@+id/textView"
            android:layout_width="227dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="70dp"
            android:fontFamily=""
            android:text="AJUSTES"
            android:textColor="@color/black"
            android:textSize="50sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/ivUsuario"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_marginHorizontal="80dp"
            android:src="@drawable/logosinfondo" />

        <TextView
            android:id="@+id/emailTextViewcl"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:text="@string/email"
            android:fontFamily="sans-serif-medium"
            android:textColor="@color/black"
            android:textSize="24sp"
            android:textStyle="italic"/>


        <TextView
            android:id="@+id/nameTextViewcl"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:text="@string/nombre"
            android:fontFamily="sans-serif-medium"
            android:textColor="@color/black"
            android:textSize="24sp"
            android:textStyle="italic"/>

        <TextView
            android:id="@+id/lastnameTextViewcl"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:text="@string/apellido"
            android:fontFamily="sans-serif-medium"
            android:textColor="@color/black"
            android:textSize="24sp"
            android:textStyle="italic"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <Button
                android:id="@+id/logOutbuttoncl"
                android:layout_marginTop="80dp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="@color/colorSecondary"
                android:text="@string/cerrar_sesi_n"
                android:textColor="@android:color/white"
                android:textStyle="italic"/>
        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
